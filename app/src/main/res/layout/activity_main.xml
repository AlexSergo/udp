<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextureView
        android:id="@+id/textureView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_bias="0.49"
        android:layout_margin="32dp"
        app:layout_constraintBottom_toTopOf="@+id/linear"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textureView"
        app:layout_constraintVertical_bias="0.537">

        <Button
            android:id="@+id/openCamera1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="КАМЕРА ПЕРЕДНЯЯ" />

        <Button
            android:id="@+id/openCamera2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="КАМЕРА ЗАДНЯЯ" />

        <Button
            android:id="@+id/recordVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="НАЧАТЬ ЗАПИСЬ" />

        <Button
            android:id="@+id/stopVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ЗАКОНЧИТЬ ЗАПИСЬ" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>